<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="0" author="stud-asamsonov">
        <createTable tableName="candidate">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(180)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(180)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uc_candidate_email"/>
            </column>
            <column name="phone" type="VARCHAR(255)"/>
            <column name="skype" type="VARCHAR(255)"/>
            <column name="version" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="1" author="stud-asamsonov">
        <createTable tableName="interview">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_interview" nullable="false"/>
            </column>
            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="position" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT"/>
            <column name="candidate_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="stud-asamsonov">
        <addForeignKeyConstraint baseTableName="interview"
                                 baseColumnNames="candidate_id"
                                 constraintName="fk_interview_candidate"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="id"
                                 referencedTableName="candidate"/>
    </changeSet>

    <changeSet id="3" author="stud-asamsonov">
        <createTable tableName="interviewer">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_interviewer" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(180)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(180)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uc_interviewer_email"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="4" author="stud-asamsonov">
        <createTable tableName="interview_interviewer">
            <column name="interview_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="interviewer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="5" author="stud-asamsonov">
        <addPrimaryKey columnNames="interview_id, interviewer_id"
                       constraintName="pk_interview_interviewer"
                       schemaName="public"
                       tableName="interview_interviewer"/>
    </changeSet>
    <changeSet id="6" author="stud-asamsonov">
        <addForeignKeyConstraint baseTableName="interview_interviewer"
                                 baseColumnNames="interview_id"
                                 constraintName="fk_inter_interview"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="id"
                                 referencedTableName="interview"/>
    </changeSet>
    <changeSet id="7" author="stud-asamsonov">
        <addForeignKeyConstraint baseTableName="interview_interviewer"
                                 baseColumnNames="interviewer_id"
                                 constraintName="fk_inter_interviewer"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="id"
                                 referencedTableName="interviewer"/>
    </changeSet>
</databaseChangeLog>

